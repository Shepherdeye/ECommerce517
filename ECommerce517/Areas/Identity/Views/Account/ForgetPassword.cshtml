@model ECommerce517.ViewModels.ForgetPasswordVM

@{
    ViewData["Title"] = "ForgetPassword";
}

<div class="container">
    <h1>ForgetPassword</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ForgetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserNameOrEmail" class="control-label"></label>
                    <input asp-for="UserNameOrEmail" class="form-control" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Login">Back to Login</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_NotifactionPartial" />
}
