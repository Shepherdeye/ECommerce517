@model List<ApplicationUser>;



<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Users</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/User/Create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Confimation</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                           
                            @if (item.EmailConfirmed)
                            {
                                <td><span class="badge text-bg-primary">Confirmed</span></td>
                            }
                            else
                            {
                                <td><span class="badge text-bg-danger">NotConfirmed</span></td>
                            }
                            <td>
                                <a href="/Admin/User/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                               @if(item.LockoutEnabled){
                                <a href="/Admin/User/Delete/@item.Id"
                                   class="btn btn-danger btn-delete"
                                    data-id="@item.Id">Lock</a>
                                }
                                else
                                {
                                    <a href="/Admin/User/Delete/@item.Id"
                                       class="btn btn-danger btn-delete"
                                       data-id="@item.Id">Un lock</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





